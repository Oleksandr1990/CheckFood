<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_activity_barcode_information_product_fon_gray"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/relativeLayoutActivityBarcodeInformationProductImagePreload"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/relativelayout_margin_bottom_activity_barcode_information_listview_header_progress"
        android:layout_marginLeft="@dimen/relativelayout_margin_left_activity_barcode_information_listview_header_progress"
        android:layout_marginRight="@dimen/relativelayout_margin_right_activity_barcode_information_listview_header_progress"
        android:layout_marginTop="@dimen/relativelayout_margin_top_activity_barcode_information_listview_header_progress"
        android:layout_weight="24" >

        <ProgressBar
            android:layout_width="@dimen/progressbar_width_and_height_activity_barcode_information_listview_header_progress_bar"
            android:layout_height="@dimen/progressbar_width_and_height_activity_barcode_information_listview_header_progress_bar"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewActivityBarcodeInformationProductImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/imageview_margin_bottom_activity_barcode_information_listview_header_product"
        android:layout_marginLeft="@dimen/imageview_margin_left_activity_barcode_information_listview_header_product"
        android:layout_marginRight="@dimen/imageview_margin_right_activity_barcode_information_listview_header_product"
        android:layout_marginTop="@dimen/imageview_margin_top_activity_barcode_information_listview_header_product"
        android:layout_weight="24"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitStart"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="66"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewActivityBarcodeInformationProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/textview_margin_right_activity_barcode_information_listview_header_product_name"
            android:layout_marginTop="@dimen/textview_margin_top_activity_barcode_information_listview_header_product_name"
            android:gravity="top"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/textview_line_spacing_extra_activity_barcode_information_listview_header_product_name"
            android:textColor="@color/color_product_name"
            android:textSize="@dimen/textview_text_size_activity_barcode_information_listview_header_product_name" />

        <org.checkfood.widget.DangerView
            android:id="@+id/dangerViewActivityBarcodeInformationProductDanger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dangerview_margin_right_activity_barcode_information_listview_header_product_danger"
            android:layout_marginTop="@dimen/dangerview_margin_top_activity_barcode_information_listview_header_product_danger" />

        <TextView
            android:id="@+id/textViewActivityBarcodeInformationProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textview_margin_bottom_activity_barcode_information_listview_header_product_description"
            android:layout_marginRight="@dimen/textview_margin_right_activity_barcode_information_listview_header_product_description"
            android:gravity="left|bottom"
            android:paddingBottom="@dimen/textview_padding_bottom_activity_barcode_information_listview_header_product_description"
            android:paddingTop="@dimen/textview_padding_top_activity_barcode_information_listview_header_product_description"
            android:textSize="@dimen/textview_text_size_activity_barcode_information_listview_header_product_description" />
    </LinearLayout>

</LinearLayout>